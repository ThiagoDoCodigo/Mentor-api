{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "jest.unit.config.ts",
    "jest.integration.config.ts",
    "**/*.test.ts"
  ]
}
